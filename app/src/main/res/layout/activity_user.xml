i<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <!-- Contenedor para Navigation Host -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/user_nav_host_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:navGraph="@navigation/user_nav_graph"
        app:defaultNavHost="true" />

    <!-- Barra de NavegaciÃ³n Inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/verde_claro"
        app:itemIconTint="@color/cascaron"
        app:menu="@menu/menu_alumno" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
